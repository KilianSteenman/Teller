<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/send_firebase_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_firebase_event" />

    <Button
        android:id="@+id/send_adobe_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_adobe_action" />

    <Button
        android:id="@+id/send_adobe_state_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_adobe_state" />

    <Button
        android:id="@+id/send_unregistered_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_unregistered_event" />

    <Button
        android:id="@+id/open_log_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_log" />

</LinearLayout>